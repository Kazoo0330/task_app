<!DOCTYPE html>
<html>
  <head>
    <title>TaskApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <%= link_to t("view.template.new_task"), tasks_path %>
        <li><%= link_to t("view.template.logout"), destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to t("view.template.login"), new_user_session_path %></li>
        <li><%= link_to t("view.template.sign_up"), new_user_registration_path %></li>
      <% end %>
    </header>

    <% if user_signed_in? %>
      <div><%= t("view.template.current_user") %><%= current_user.name %></div>
    <% end %>

    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>

    <%= yield %>

  </body>
</html>
