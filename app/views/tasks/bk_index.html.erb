<h1><%= t("view.task.index") %></h1>

<%= form_with(local: true, method: :get, url: tasks_path) do |form| %>
  <%= form.label :search %>
  <%= form.text_field :search %>

  <%#= form.label :search_with_content %>
  <%#= form.text_field :content %>

  <%#= form.label :status_search %>
  <%#= form.select :status, Task.statuses.keys, include_blank: true, selected: '' %>

  <span class='actions'><%= form.submit t("layout.views.search") %></span>
<% end %>

<%# search results shown below %>
<table>
  <tbody>
    <% if @search_tasks.present? %>
      <% @search_tasks.each do |search_result| %>
        <tr>
          <td><%= search_result.title %></td>
          <td><%= search_result.content %></td>
          <td><%= t("view.task.status") %><%= search_result.status %></td>
          <td><%= t("view.task.expiration") %><%= search_result.expires_on %></td>
          <td><%= t("view.task.time") %><%= search_result.created_at.strftime('%Y/%m/%d %H:%M')  %></td>
        </tr>
      <% end %>
    <% else %>
      <p>検索結果</p>
    <% end %>
  </tbody>
</table>
<%# search results shown above %>

<%= link_to t("view.task.high_priority"), tasks_path(sort_expired: "true") %>
<%# <%= link_to t("view.task.low_priority"), tasks_path(sort_expired: "true") %>
<table>
  <thead>
    <tr>
      <th><%= t("view.task.title") %></th>
      <th><%= t("view.task.content") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= t("view.task.status") %><%= task.status %></td>
        <td><%= t("view.task.expiration") %><%= task.expires_on %></td>
        <td><%= t("view.task.time") %><%= task.created_at.strftime('%Y/%m/%d %H:%M')  %></td>
        <td><%= link_to t("view.task.show"), task %></td>
        <td><%= link_to t("view.task.edit"), edit_task_path(task) %></td>
        <td><%= link_to t("view.task.destroy"), task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

