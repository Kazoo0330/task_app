<h1><%= t("view.task.index") %></h1>

<%= link_to t("view.task.high_priority"), tasks_path(sort_expired: "true") %>
<%# <%= link_to t("view.task.low_priority"), tasks_path(sort_expired: "true") %>
<table>
  <thead>
    <tr>
      <th><%= t("view.task.title") %></th>
      <th><%= t("view.task.content") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= t("view.task.status") %><%= task.status %></td>
        <td><%= t("view.task.expiration") %><%= task.expires_on %></td>
        <td><%= t("view.task.time") %><%= task.created_at.strftime('%Y/%m/%d %H:%M')  %></td>
        <td><%= link_to t("view.task.show"), task %></td>
        <td><%= link_to t("view.task.edit"), edit_task_path(task) %></td>
        <td><%= link_to t("view.task.destroy"), task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("view.template.new_task"), new_task_path %>
